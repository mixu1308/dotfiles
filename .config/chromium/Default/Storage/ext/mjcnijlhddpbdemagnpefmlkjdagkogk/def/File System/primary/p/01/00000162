                                                            1                                                                                        clove                                                                                        garlic                                                                                </li>
                                                                    <li nodeIndex="283">
                                                            3                                                                                        cm piece                                                                                        fresh ginger                                                                                        , peeled                                                    </li>
                                                                    <li nodeIndex="284">
                                                            2                                                                                                                    spring onions                                                                                        , trimmed and finely sliced                                                    </li>
                                                                    <li nodeIndex="285">
                                                                                                                    olive oil                                                                                </li>
                                                                    <li nodeIndex="286">
                                                            4                                                                                                                    higher-welfare chicken thighs                                                                                        , skin on                                                    </li>
                                                                    <li nodeIndex="287">
                                                            4                                                                                                                    higher-welfare chicken drumsticks                                                                                        , skin on                                                    </li>
                                                                    <li nodeIndex="288">
                                                                                                                    beer                                                                                        , for drizzling, optional                                                    </li>
